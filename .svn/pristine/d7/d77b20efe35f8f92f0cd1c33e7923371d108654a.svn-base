<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:sf="http://www.springframework.org/tags/faces"
	xmlns:sec="http://www.springframework.org/security/tags"
	xmlns:pe="http://primefaces.org/ui/extensions">
	<div class="ui-g">
		<!--Primer nivel de filtros-->
		<div class="ui-g-12 ui-md-12">
			<p:outputLabel for="primerNivel" value="Tipo de reporte:" />
			<p:selectOneRadio id="primerNivel"
				value="#{mbReporte.formFiltros.valorPrimerFiltro}"
				layout="responsive" columns="1" required="true"
				requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}">
				<f:selectItems value="#{mbReporte.formFiltros.primerNivelFiltros}"
					var="c" itemLabel="#{c.value}" itemValue="#{c.key}" />
				<p:ajax event="change" process="@this" update="@form"
					listener="#{mbReporte.obtenerSegundoNivelFiltros}" />
			</p:selectOneRadio>

			<p:messages id="msgPrimerNivel" for="primerNivel" />

		</div>
		<!--Segundo Nivel de filtros-->
		<div class="ui-g-12 ui-sm-12">
			<p:outputPanel id="segundoNivelFiltros"
				rendered="#{mbReporte.formFiltros.segundoNivelFiltros != null}"
				styleClass="ui-g-6">
				<c:choose>
					<c:when
						test="#{(mbReporte.formFiltros.nivelOficinas eq 1 or mbReporte.formFiltros.nivelOficinas eq 2) and mbReporte.formFiltros.valorPrimerFiltro eq 1}">
						<p:outputLabel for="segundoNivelCheck" value="Filtro:" />
						<p:selectManyCheckbox id="segundoNivelCheck"
							value="#{mbReporte.formFiltros.valorSegundoFiltroCheck}"
        						requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}"
                                                        required="#{mbReporte.requeridoSegundoNivel}"
                                                        >
							<f:selectItems
								value="#{mbReporte.formFiltros.segundoNivelFiltros}" var="c"
								itemLabel="#{c.value}" itemValue="#{c.key}"
								itemDisabled="#{c.disabled}" />

							<!-- Llamamos remoteCommand para obtener los datos seleccionados del filtro -->
							<p:ajax event="change" oncomplete="rc();" />
						</p:selectManyCheckbox>
						<p:messages id="msgSegundoNivelCheck" for="segundoNivelCheck" />
					</c:when>
					<c:otherwise>
						<c:if
							test="#{(mbReporte.formFiltros.nivelOficinas eq 2)or (mbReporte.formFiltros.nivelOficinas eq 3) or (mbReporte.formFiltros.nivelOficinas eq 1 and mbReporte.formFiltros.valorPrimerFiltro eq 3) }">
							<p:outputLabel for="segundoNivelRadio"
								value="#{mbReporte.formFiltros.valorPrimerFiltro eq 1?'Filtro:':'Formato'}" />
							<p:selectOneRadio id="segundoNivelRadio"
								value="#{mbReporte.formFiltros.valorSegundoFiltroRadio}"
								required="true"
								requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}">
								<f:selectItems
									value="#{mbReporte.formFiltros.segundoNivelFiltros}" var="c"
									itemLabel="#{c.value}" itemValue="#{c.key}" />
								<p:ajax event="change" process="@this" update="@form"
									listener="#{mbReporte.obtenerTercerNivelFiltros}" />
							</p:selectOneRadio>
							<p:messages id="msgSegundoNivelRadio" for="segundoNivelRadio" />
						</c:if>
					</c:otherwise>
				</c:choose>
			</p:outputPanel>
		</div>

		<!-- Obtiene los datos del filtro de segundo nivel y al terminar ejecuta el siguiente remoteCommand -->
		<p:remoteCommand name="rc"
			actionListener="#{mbReporte.llenaDatosSegundoNivel}"
			oncomplete="rcBueno();" />

		<!-- Procesa validacion -->
		<p:remoteCommand name="rcBueno"
			actionListener="#{mbReporte.validarSegundoNivelOCyJL}" update="@form" />

		<!--Tercer Nivel de filtros-->
		<div class="ui-g-12 ui-sm-12">
			<p:outputPanel id="tercerNivelFiltros"
				rendered="#{mbReporte.formFiltros.tercerNivelFiltros != null}"
				styleClass="ui-g-6">
				<p:outputLabel for="tercerNivel" value="Filtro:" />
				<p:selectManyCheckbox id="tercerNivel" layout="grid" columns="1"
					value="#{mbReporte.formFiltros.valorTercerFiltro}" required="true"
					requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}">
					<f:selectItems value="#{mbReporte.formFiltros.tercerNivelFiltros}"
						var="c" itemLabel="#{c.value}" itemValue="#{c.key}" />
					<p:ajax event="change" process="@this"
						listener="#{mbReporte.setMuestraTabla(false)}" update="@form" />
				</p:selectManyCheckbox>
				<p:messages id="msgTercerNivel" for="tercerNivel" />
				<c:if test="#{mbReporte.formFiltros.opcionDeFechas}">
					<p:selectManyCheckbox id="idOpcionFechas" layout="grid" columns="1"
						value="#{mbReporte.formFiltros.opcionDeFecha}">
						<f:selectItem
							itemLabel="#{messageSource['etiqueta_reportes_filtro_porFechaAprobacion']}"
							itemValue="1"
							itemDisabled="#{mbReporte.formFiltros.valorTercerFiltro == null}" />
						<p:ajax event="change" process="@this"
							listener="#{mbReporte.mostrarYlimpiarCamposFecha}" update="@form" />
					</p:selectManyCheckbox>
				</c:if>


			</p:outputPanel>
		</div>
		<c:if test="#{mbReporte.formFiltros.mostrarFiltroFechas}">
			<ui:include src="filtroFechas.xhtml" />
		</c:if>
	</div>

</ui:composition>
